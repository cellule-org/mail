{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types",
      "./backend/types"
    ]
  },
  "include": [
    "src",
    "backend/types/**/*",
    "src/ws-server.ts",
    "src/env.d.ts"
  ]
}